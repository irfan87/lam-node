<% include _header %>
  <div class="container">
    <div class="row">
      <h1>Edit Profile</h1>
      <form class="" action="/edit" method="post">
        <div class="form-group">
          <input type="text" name="displayName" value="<%= currentUser.displayName || "" %>" placeholder="Display Name" autofocus class="form-control">
        </div>
        <div class="form-group">
          <textarea  class="form-control" name="bio" placeholder="Tell us more about yourself!" rows="8" cols="40"><%= currentUser.bio || "" %></textarea>
        </div>
        <input type="submit" value="Update My Profile!" class="btn btn-primary btn-block">
      </form>
    </div>
  </div>
<% include _footer %>
